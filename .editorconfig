root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[**.js]
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[**.json]
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[**.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = false
